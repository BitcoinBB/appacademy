<!DOCTYPE html>
<html>
<head>
  <title>Assessment04</title>
</head>
<body>

<% if logged_in? %>
  <%= current_user.username %>
  <%= button_to "Sign Out", session_url, method: :destroy %>
<% else %>
  <%= link_to "Sign In", new_session_url, method: :new %>
  <%= link_to "Sign Up", new_user_url, method: :new %>
<% end %>

<%= flash[:errors].join("<br>") if flash[:errors] %>

<%= yield %>


</body>
</html>

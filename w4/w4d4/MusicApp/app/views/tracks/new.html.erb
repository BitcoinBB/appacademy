<h1>New track</h1>

<form action="/tracks" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <label for="name">Name: </label>
  <input type="text"
         name="track[name]"
         id="name"
         value="">

  <br>

  <label for="album_id">Album: </label>
  <select name="track[album_id]">
    <% Album.all.each do |album| %>
      <option value="<%= album.id %>"
              <%= album == @album ? "selected" : "" %>>
        <%= album.name %>
      </option>
    <% end %>
  </select>

  <br>

  <label for="track_type">Track type: </label>
  bonus<input type="radio" name="track[track_type]" value="bonus" checked>
  regular<input type="radio" name="track[track_type]" value="regular">

  <br>

  <label for="lyrics">Lyrics:</label>
  <textarea name="track[lyrics]" rows="8" cols="80"></textarea>

  <br>

  <input type="submit" value="Submit">
</form>

<%= link_to "Back to album tracks", album_url(@album), action: "index" %>
